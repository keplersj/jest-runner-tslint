{
  "name": "jest-runner-tslint",
  "version": "0.0.0-development",
  "description": "TSLint runner for Jest",
  "main": "dist/index.js",
  "repository": "https://github.com/keplersj/jest-runner-tslint",
  "author": "Kepler Sticka-Jones <kepler@stickajones.org>",
  "license": "MIT",
  "private": false,
  "files": ["dist"],
  "scripts": {
    "build": "tsc",
    "pretest": "tsc",
    "test": "jest -c jest-tslint.config.js",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "precommit": "lint-staged",
    "prerelease": "tsc",
    "release": "semantic-release"
  },
  "lint-staged": {
    "*": ["jest --bail --findRelatedTests"]
  },
  "release": {
    "verifyConditions": "@semantic-release/github"
  },
  "jest-runner-tslint": {
    "cliOptions": {
      "fix": true
    }
  },
  "devDependencies": {
    "@commitlint/cli": "6.1.3",
    "@commitlint/config-conventional": "6.1.3",
    "@types/node": "9.6.4",
    "husky": "0.14.3",
    "jest": "22.4.3",
    "lint-staged": "7.0.4",
    "prettier": "1.11.1",
    "semantic-release": "12.4.1",
    "ts-jest": "22.4.2",
    "tslint-config-prettier": "1.10.0",
    "tslint-plugin-prettier": "1.3.0",
    "typescript": "2.8.1"
  },
  "dependencies": {
    "cosmiconfig": "^4.0.0",
    "create-jest-runner": "^0.3.0",
    "tslint": "^5.8.0"
  }
}
